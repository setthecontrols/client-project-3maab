<div class="container">
<div class="center-align">
  <h1 class="welcome-user">Welcome, <%= @user.username %>!</h1>
    </div>
  <div class="center-align">
  <p><%= link_to 'Create New Recipe', new_recipe_path(@recipe), :class => 'waves-effect waves-light btn-large' %></p>
  </div>
  <br>
  <br>
  <div class="center-recipe center-align">
      <div class="row">
        <div class="col s12 m6">
          <div class="card black">
            <div class="card-content white-text">
              <span class="card-title" id="your-recipe">Your Recipes</span>
              <p>
                  <ol>
                  <% @recipes.each do |recipe| %>
                  <li><%= link_to recipe.name, recipe_path(recipe) %></li>
                  <% end %>
                  </ol>
                  <% if current_user && current_user.admin = true %>
                  <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
  </div>
