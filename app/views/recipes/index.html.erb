<div class="container">
  <h1>List Of All Recipes</h1>
  <br>
  <div id = "appetizers">
    <h3>Appetizers</h3>
    <% @appetizers.each do |recipe| %>
    <%= link_to recipe.name, recipe_path(recipe) %><br>
    <% end %>
