    <% end %>
    <br><br>
  </div>
  <div id = "entrees">
    <h3>Entrees</h3>
    <% @entrees.each do |recipe| %>
    <%= link_to recipe.name, recipe_path(recipe) %><br>
    <% end %>
    <br><br>
  </div>
  <div id = "desserts">
    <h3>Desserts</h3>
    <% @desserts.each do |recipe| %>
    <%= link_to recipe.name, recipe_path(recipe) %><br>
    <% end %>
  </div>
</div>
