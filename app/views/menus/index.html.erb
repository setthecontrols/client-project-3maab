<div class="container">
<h1 style="text-align: center;">Weekly Menu</h1>
<div class="menu-pic">
<%= image_tag 'p.jpg', style: 'height:100%;width:auto;' %>

<div class="row">
  <div class="col s6">
<h5>Appetizers</h5>
<ul>
<% @appetizers.first(5).each do |appetizer| %>
  <%= appetizer.name %>
  <% @ratings = appetizer.ratings %>
  <% @total = @ratings.reduce(0) { |sum, rating| sum += rating.value } %>
  <% @total %><br>
<% end %>
</ul>
</div>
  <div class="col s6">
<h5>Salads</h5>
<ul>
<% @salads.first(5).each do |salad| %>
  <%= salad.name %><br>
<% end %>
</ul>
</div>
  <div class="col s6">
<h5>Entrees</h5>
<ul>
<% @entrees.first(5).each do |entree| %>
  <%= entree.name %><br>
<% end %>
</ul>
</div>
  <div class="col s6">
<h5>Desserts</h5>
<ul>
<% @desserts.first(5).each do |dessert| %>
  <%= dessert.name %><br>
<% end %>
</ul>
</div>
</div>
</div>
